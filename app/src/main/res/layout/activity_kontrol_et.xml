<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ecf2"
    tools:context=".kontrolEt">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="EC (mS/cm)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Işık Süresi (saat/gün)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Nem (%)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Sıcaklık (°C)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/ECdeger"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:hint="0"
        android:textAlignment="center"
        android:text="0"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/textview_bg"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/pHdeger" />

    <TextView
        android:id="@+id/sureDeger"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:hint="0"
        android:textAlignment="center"
        android:text="0"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/textview_bg"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/ECdeger" />

    <TextView
        android:id="@+id/nemDeger"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:hint="0"
        android:textAlignment="center"
        android:text="0"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/textview_bg"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/sureDeger" />

    <TextView
        android:id="@+id/sicaklikDeger"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:hint="0"
        android:textAlignment="center"
        android:text="0"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/textview_bg"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/nemDeger" />

    <ImageView
        android:id="@+id/seraGorsel"
        android:layout_width="327dp"
        android:layout_height="209dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/bitkiAdi"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:text="Bitki Adı"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/seraGorsel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="pH değeri (0 - 14)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/bitkiAdi" />

    <TextView
        android:id="@+id/pHdeger"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:hint="0"
        android:textAlignment="center"
        android:text="0"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/textview_bg"
        app:layout_constraintEnd_toEndOf="@+id/seraGorsel"
        app:layout_constraintTop_toBottomOf="@+id/bitkiAdi" />

</androidx.constraintlayout.widget.ConstraintLayout>