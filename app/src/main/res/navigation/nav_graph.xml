<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listeFragment">

    <fragment
        android:id="@+id/listeFragment"
        android:name="com.harun.hek.view.listeFragment"
        android:label="fragment_liste"
        tools:layout="@layout/fragment_liste" >
        <action
            android:id="@+id/action_listeFragment_to_bitkiFragment"
            app:destination="@id/bitkiFragment" />
    </fragment>
    <fragment
        android:id="@+id/bitkiFragment"
        android:name="com.harun.hek.view.bitkiFragment"
        android:label="fragment_bitki"
        tools:layout="@layout/fragment_bitki" >
        <argument
            android:name="bilgi"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_bitkiFragment_to_listeFragment"
            app:destination="@id/listeFragment" />
    </fragment>
    <argument
        android:name="bilgi"
        app:argType="string" />
    <argument
        android:name="id"
        app:argType="integer" />
</navigation>